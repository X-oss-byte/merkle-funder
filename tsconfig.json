{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "esModuleInterop": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "target": "es2021",

    "strict": true,
    "skipLibCheck": true,

    "baseUrl": "./",
    "outDir": "./dist",

    "forceConsistentCasingInFileNames": true
  }
}
